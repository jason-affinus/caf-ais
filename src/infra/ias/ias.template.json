{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "platform": {
            "type": "object",
            "defaultValue": {
                "tenantId": "[tenant().tenantId]",
                "regionId": "uksouth",
                "environment": "dev"
            }
        },
        "keyVault": {
            "type": "object",
            "defaultValue": {
                "name": "[concat('kv-ais-', parameters('platform').environment,'-', parameters('platform').regionId)]",
                "environment": "dev"

            }
        },
        "vnetAddressSpace": {
            "type": "string",
            "defaultValue": "192.168.0.0/16",
            "metadata": {
                "description": "CIDR prefix for the VNet address space."
            }
        },
        "frontEndSubnetPrefix": {
            "type": "string",
            "defaultValue": "192.168.1.0/24",
            "metadata": {
                "description": "CIDR address prefix for the front end subnet."
            }
        },
        "backEndSubnetPrefix": {
            "type": "string",
            "defaultValue": "192.168.2.0/24",
            "metadata": {
                "description": "CIDR address prefix for the back end subnet."
            }
        },
        "regionId": {
            "defaultValue": "uksouth",
            "type": "String"
        }
    },

    "variables": {

    },

    "resources": [
        // Key vault name
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "keyVault",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'kv/template.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "keyVaultName": {
                        "value": "[concat('kv-ais-', parameters('platform').environment,'-', parameters('platform').regionId)]"
                    }

                }
            }
        },

        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "vNET",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'vnet/template.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "environment": {
                        "value": "[parameters('platform').environment]"
                    },
                    "vnetAddressSpace": {
                        "value": "[parameters('vnetAddressSpace')]"
                    },
                    "frontEndSubnetPrefix": {
                        "value": "[parameters('frontEndSubnetPrefix')]"
                    },
                    "backEndSubnetPrefix": {
                        "value": "[parameters('backEndSubnetPrefix')]"
                    },
                    "regionId": {
                        "value": "[parameters('platform').regionId]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "serviceBus",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'sbus/template.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "environment": {
                        "value": "[parameters('platform').environment]"
                    },
                    "regionId": {
                        "value": "[parameters('platform').regionId]"
                    }
                }
            }
        }
    ],
    "outputs": {
    }
}