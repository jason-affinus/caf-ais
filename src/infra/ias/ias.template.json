{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "systemPrefix": {
            "type": "string",
            "defaultValue": "aif",
            "metadata": {
                "description": "System prefix used in naming resources"
            }
        },
        "environment": {
            "type": "string",
            "defaultValue": "dev",
            "allowedValues": [ "dev", "uat", "prod" ],
            "metadata": {
                "description": "Type of environment"
            }
        },
        "vnetAddressSpace": {
            "type": "string",
            "defaultValue": "192.168.0.0/16",
            "metadata": {
                "description": "CIDR prefix for the VNet address space."
            }
        },
        "frontEndSubnet": {
            "type": "string",
            "defaultValue": "192.168.1.0/24",
            "metadata": {
                "description": "CIDR address prefix for the front end subnet."
            }
        },
        "backEndSubnet": {
            "type": "string",
            "defaultValue": "192.168.2.0/24",
            "metadata": {
                "description": "CIDR address prefix for the back end subnet."
            }
        },
        "privateLinkSubnet": {
            "type": "string",
            "defaultValue": "192.168.10.0/24",
            "metadata": {
                "description": "CIDR address prefix for the private link."
            }
        }
    },

    "variables": {
        "nameSuffix": "[concat('-',parameters('systemPrefix'),'-',parameters('environment'),'-',resourceGroup().location,'-01')]",

        "kvName": "[concat('kv',variables('nameSuffix'))]",
        
        "vNet" : {
            "name":"[concat('vnet-',variables('nameSuffix'))]",
            "address":"[parameters('vnetAddressSpace')]",
            "frontEnd": {
                "name":"[concat('snet-',parameters('systemPrefix'),'-frontend-',parameters('environment'),'-',resourceGroup().location,'-01')]",
                "nsg":"[concat('nsg-',parameters('systemPrefix'),'-frontend-',parameters('environment'),'-',resourceGroup().location,'-01')]",
                "address":"[parameters('frontEndSubnet')]"
            },
            "backEnd": {
                "name":"[concat('snet-',parameters('systemPrefix'),'-backend-',parameters('environment'),'-',resourceGroup().location,'-01')]",
                "nsg":"[concat('nsg-',parameters('systemPrefix'),'-backend-',parameters('environment'),'-',resourceGroup().location,'-01')]",
                "address":"[parameters('backEndSubnet')]"
            },
            "privateLink": {
                "name":"[concat('snet-',parameters('systemPrefix'),'-privatelink-',parameters('environment'),'-',resourceGroup().location,'-01')]",
                "address":"[parameters('privateLinkSubnet')]"
            }
        }

    },

    "resources": [
        // Key vault name
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "caf-aif-keyvault",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'kv/template.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "keyVaultName": {
                        "value": "[variables('kvName')]"
                    }

                }
            }
        },

        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "caf-aif-vnet",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'vnet/template.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vNet": {
                        "value":"[variables('vNet')]"
                    }
                   
                  
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "caf-aif-servicebus",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'sbus/template.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "environment": {
                        "value": "[parameters('Environment')]"
                    },
                    "regionId": {
                        "value": "[resourceGroup().location]"
                    }
                }
            }
        }
    ],
    "outputs": {
    }
}