{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vNet": {
            "type": "object"
        },
        "platform": {
            "type": "object"
        },
        "storage": {
            "type": "object"
        }

    },
    "functions": [],
    "variables": {
        // "storageAccountName": "[concat('stg',parameters('platform').systemPrefix, parameters('platform').environment,uniqueString(resourceGroup().id) )]"
        "pepName": "[concat('pep-',parameters('platform').systemPrefix,'-stg-blog-',parameters('platform').environment,'-',parameters('platform').region,'-01')]",
        "pepNicName": "[concat('nic-',parameters('platform').systemPrefix,'-stg-blob-',parameters('platform').environment,'-',parameters('platform').region,'-01')]"

    },
    "resources": [
        {
            "apiVersion": "2019-06-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('storage').name]",
            "location": "[parameters('platform').region]",
            "tags": {},
            "sku": {
                "name": "Standard_LRS"
            },

            "properties": {
                "supportsHttpsTrafficOnly": true,
                "minimumTlsVersion": "TLS1_2"
            }
        },
        {
            "location": "[parameters('platform').region]",
            "name": "[variables('pepName')]",
            "type": "Microsoft.Network/privateEndpoints",
            "apiVersion": "2021-05-01",
            "properties": {
                "subnet": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets',parameters('vnet').name, parameters('vnet').privateLink.name)]"
                },
                "customNetworkInterfaceName": "[variables('pepNicName')]",
                "privateLinkServiceConnections": [
                    {
                        "name": "[variables('pepName')]",
                        "properties": {
                            "privateLinkServiceId": "[resourceId('Microsoft.Storage/storageAccounts',parameters('storage').name)]",
                            "groupIds": [ "blob" ]
                        }
                    }
                ]
            },
            "tags": {},
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts',parameters('storage').name)]"

            ]
        }
    ],
    "outputs": {}
}
